@model PagedList.IPagedList<Web_CuoiKy.Models.San_Pham>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-content" class="single-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="index.html">Trang Chủ</a></li>
                    <li><a href="category.html">Sản Phẩm</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm("SanPham", "SanPham"))
            {
            <div style="text-align:center;">
                <b>Tìm Kiếm Bằng:</b>@Html.RadioButton("seachBy", "NameProduct")<text> Tên Sản Phẩm</text>
                @Html.RadioButton("seachBy", "Category")<text> Loại</text><br />
                @Html.RadioButton("seachBy", "None")<text> Không</text><br />
                @Html.TextBox("seach")<input type="submit" value="Tìm" />
            </div>
            }
        </div>
        <div class="row">
            <div id="main-content" class="col-md-10">
                <div class="row">
                    <div class="col-md-12">
                        <div class="products">
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    <div class="product">

                                        <div class="image"><a href="@Url.Action("ChiTietSP",new { id=item.MASP })"> <img src="~/Images/@item.HINH" /></a></div>
                                        <div class="buttons">
                                            <a class="btn cart" href="/ShoppingCart/AddtoCart/@item.MASP">Thêm <span class="glyphicon glyphicon-shopping-cart"></span></a>
                                        </div>
                                        <div class="caption">
                                            <div class="name"><h3><a href="@Url.Action("ChiTietSP",new { id= @item.MASP })">@item.TENSP</a></h3></div>
                                            <div class="price">@item.GIA VND</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="row text-center">
                    <ul class="pagination">
                        @Html.PagedListPager(Model, pageNo => Url.Action("SanPham", new { pageNo }))
                    </ul>
                </div>
            </div>
            <div id="sidebar" class="col-md-2">
                <div class="widget wid-categories">
                    <div class="heading"><h4>CATEGORIES</h4></div>
                    <div class="content">
                        <ul>
                            <li> @Html.ActionLink("ÁO KHOÁC", "Ao_Khoac", "SanPham")</li>
                            <li> @Html.ActionLink("ÁO SƠ MI", "Ao_SoMi", "SanPham")</li>
                            <li> @Html.ActionLink("QUẦN JEANS", "Quan_Jeans", "SanPham")</li>
                            <li> @Html.ActionLink("QUẦN TẤY", "Quan_Tay", "SanPham")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>	